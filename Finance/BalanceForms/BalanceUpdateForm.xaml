<Window x:Class="Finance.BalanceForms.BalanceUpdateForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance.BalanceForms"
        mc:Ignorable="d"
        Title="Сумма счёта" Height="224" Width="470" Background="#FF232323">
    <Grid>
        <TextBox Name="summaBox" HorizontalAlignment="Left" Margin="15,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Height="33"/>
        <Label Content="Введите сумму счёта: " HorizontalAlignment="Left" Margin="15,22,0,0" Foreground="White" VerticalAlignment="Top" FontSize="18"/>
        <Button Name="savedButton" Content="Сохранить" HorizontalAlignment="Left" Margin="26,146,0,0" VerticalAlignment="Top" Height="29" Width="94"/>
        <Button x:Name="cancelButton" Content="Отмена" HorizontalAlignment="Left" Margin="162,146,0,0" VerticalAlignment="Top" Height="29" Width="94"/>
    </Grid>
</Window>
